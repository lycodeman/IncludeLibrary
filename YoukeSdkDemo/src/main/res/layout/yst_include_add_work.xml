<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >

    <!-- 留言 -->

    <TextView
        android:id="@+id/txt_newinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="15dp"
        android:background="#7A7A7A"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="您有9条留言，3条回复未读"
        android:textColor="@color/yst_white"
        android:textSize="15dp" />
    <!-- title -->

    <EditText
        android:id="@+id/txt_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/yst_white"
        android:ellipsize="end"
        android:gravity="left|center"
        android:hint="@string/yst_input_title"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/yst_gray"
        android:textSize="15dp" />
    <!-- content -->

    <EditText
        android:id="@+id/txt_content"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/yst_white"
        android:gravity="left|top"
        android:hint="@string/yst_input_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/yst_gray"
        android:textSize="15dp" />

    <!-- images -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="@color/yst_white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_img1"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:scaleType="fitXY"
            android:src="@drawable/yst_add_img" />

        <ImageView
            android:id="@+id/iv_img2"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/yst_add_img"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_img3"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/yst_add_img"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_img4"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/yst_add_img"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_img5"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/yst_add_img"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_img6"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/yst_add_img"
            android:visibility="gone" />
    </LinearLayout>
    <!-- tel -->

    <EditText
        android:id="@+id/txt_tel"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/yst_white"
        android:ellipsize="end"
        android:gravity="left|center"
        android:hint="@string/yst_linktel"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/yst_gray"
        android:textSize="15dp" />
    <!-- email -->

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/yst_white"
        android:ellipsize="end"
        android:gravity="left|center"
        android:hint="@string/yst_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/yst_gray"
        android:textSize="15dp" />

</LinearLayout>