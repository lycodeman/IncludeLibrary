<?xml version="1.0" encoding="utf-8"?>
<!--     正在浏览  yst_layout_left_3 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yst_layout_left_3"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/yst_img_left_3"
        android:layout_width="53dip"
        android:layout_height="53dip"
        android:layout_marginRight="3dip"
        android:src="@drawable/yst_def_userimg" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="3dip"
        android:background="@drawable/yst_chat_iv_chat_left9"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="19dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:gravity="left|center"
                android:text="订单号："
                android:textColor="@color/yst_black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_order_id_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:gravity="left|center"
                android:text="xxx"
                android:textColor="@color/yst_black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 图片 -->

            <ImageView
                android:id="@+id/iv_order_img_l"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginRight="6dip"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/yst_def_img" />
            <!-- 商品信息，价格 -->

            <LinearLayout
                android:id="@+id/yst_layout_left_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_order_title_l"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="xxxxxxxxx"
                    android:textColor="@color/yst_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_order_price_l"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:gravity="left|center"
                    android:text="$xxxx"
                    android:textColor="@color/yst_black"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>