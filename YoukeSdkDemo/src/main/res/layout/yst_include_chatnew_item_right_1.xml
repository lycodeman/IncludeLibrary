<?xml version="1.0" encoding="utf-8"?>
<!-- 发送消息  yst_layout_right_1 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- ===========================right============================== -->

    <LinearLayout
        android:id="@+id/yst_layout_right_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="11dip"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingTop="2dip" >

        <LinearLayout
            android:id="@+id/yst_layout_right_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"
            android:minWidth="90dip"
            android:orientation="horizontal" >

            <!-- 错误图片 -->

            <ImageView
                android:id="@+id/yst_iv_img_error"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="12dip"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/yst_iv_img_error" />

            <TextView
                android:id="@+id/txt_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:text="10%"
                android:textColor="@color/yst_titile_bg"
                android:textSize="13sp" />

            <ProgressBar
                android:id="@+id/yst_progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="5dip"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/yst_progressbar" />
        </LinearLayout>
        <!-- 图片处理 -->

        <RelativeLayout
            android:id="@+id/yst_video_contain_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/yst_iv_img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dip"
                android:adjustViewBounds="true"
                android:maxWidth="300dip"
                android:scaleType="fitStart"
                android:src="@drawable/yst_def_img" />

            <ImageView
                android:id="@+id/yst_video_thum_play_right"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/yst_video_play_icon" />
        </RelativeLayout>

        <!-- 文字表情内容 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/yst_contain_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:background="@drawable/yst_chat_iv_chat_right9"
                android:gravity="center|left"
                android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/yst_txt_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:paddingLeft="5dip"
                        android:text="你好"
                        android:textColor="@color/yst_white"
                        android:maxLength="500"
                        android:textColorLink="#ffffff"
                        android:textSize="15sp" />

                <!-- 声音图标 -->

                <RelativeLayout
                    android:id="@+id/yst_iv_aud_len_right"
                    android:layout_width="220dip"
                    android:layout_height="wrap_content"
                    android:minHeight="36dip" >

                    <ImageView
                        android:id="@+id/yst_iv_aud_right"
                        android:layout_width="20dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/yst_chat_audio_right_3" />

                    <ImageView
                        android:id="@+id/yst_video_play_right"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/yst_video_play_icon" />
                    <!-- 声音长度 -->

                    <TextView
                        android:id="@+id/txt_aud_time_right"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="35dip"
                        android:gravity="center"
                        android:text="23&apos;&apos;"
                        android:textColor="@color/yst_white"
                        android:textSize="13sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <!-- 头像 -->

        <ImageView
            android:id="@+id/yst_img_right"
            android:layout_width="53dip"
            android:layout_height="53dip"
            android:layout_marginLeft="3dip"
            android:src="@drawable/yst_def_userimg"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>